<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:img="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia" >
  <Design.PreviewWith>
    <Border Padding="20">
      <img:Icon Classes="loading" />
    </Border>
  </Design.PreviewWith>

  <Style Selector="img|Icon.loading" >
    <Setter Property="Value" Value="fa-spinner" />
    <Setter Property="Animation" Value="Pulse" />
    <Setter Property="FontSize" Value="96" />
  </Style>
</Styles>
